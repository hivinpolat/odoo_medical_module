{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Odoo with Custom Config",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/../../../../odoo15/odoo/odoo-bin",
            "args": [
                "-c", "${workspaceFolder}/odoo.conf",
                "-u", "odoo_medical_module"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
