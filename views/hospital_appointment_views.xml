<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <!-- states change buttons in header-->
                <header>
                    
                    <button name="set_to_in_progress" type="object" string="Set to In-Progress"
                        class="oe_highlight"
                        attrs="{'invisible': [('stage', '!=', 'draft')]}"/>
                        
                    <button name="set_to_done" type="object" string="Set to Done"
                        class="oe_highlight"
                        attrs="{'invisible': [('stage', '!=', 'in_progress')]}"/>
                        
                    <button name="set_to_draft" type="object" string="Set to Draft"
                        class="oe_highlight"
                        attrs="{'invisible': [('stage', 'not in', ['done', 'in_progress'])]}"/>
                        
                    <button name="set_to_cancel" type="object" string="Set to Cancel"
                        class="oe_highlight"
                        attrs="{'invisible': [('stage', '=', 'cancel')]}"/>
                </header>
                <sheet>
                    <group>
                        <field name="appointment_date"/>
                        <field name="code"/>
                        <field name="doctor_id" widget="many2many_tags"/>
                        <field name="patient_id"/>
                        <field name="stage"/>
                    </group>

                    <group string="Treatments">
                        <field name="treatment_id">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="is_done"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="appointment_date"/>
                <field name="code"/>
                <field name="patient_id"/>
                <field name="stage"/>
            </tree>
        </field>
    </record>

</odoo>
