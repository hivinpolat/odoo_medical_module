
<!-- adding a new field to inherited odoo module sale_order-->

<record id="view_order_form_inherit_hospital" model="ir.ui.view">
    <field name="name">sale.order.form.hospital.inherit</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <header position="inside">
            <button name="action_view_appointments" type="object" string="Appointments" class="oe_stat_button" icon="fa-calendar">
                <field name="appointment_id" invisible="1"/>
            </button>
        </header>
    </field>
</record>
