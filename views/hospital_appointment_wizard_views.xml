<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hospital_appointment_wizard_form" model="ir.ui.view">
        <field name="name">hospital.appointment.wizard.form</field>
        <field name="model">hospital.appointment.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Appointment">
                <group>
                    <field name="patient_id"/>
                    <field name="doctor_ids"/>
                </group>
                <footer>
                    <button string="Create Appointment" type="object" name="create_appointment" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>